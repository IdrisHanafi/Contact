<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <info.idrishanafi.contact.RoundedImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:id="@+id/contact_Icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:src="@drawable/obama"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Name"
        android:id="@+id/contact_firstName"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/contact_Icon"
        android:layout_toEndOf="@+id/contact_Icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Name"
        android:id="@+id/contact_lastName"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/contact_firstName"
        android:layout_toEndOf="@+id/contact_firstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="phone"
        android:id="@+id/contact_phone"
        android:layout_below="@+id/contact_firstName"
        android:layout_alignLeft="@+id/contact_firstName"
        android:layout_alignStart="@+id/contact_firstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="email"
        android:id="@+id/contact_email"
        android:layout_below="@+id/contact_phone"
        android:layout_alignLeft="@+id/contact_phone"
        android:layout_alignStart="@+id/contact_phone" />
</RelativeLayout>